<div class="container">
  <br>
  <h2>All our flats (<%= @flats.length %>)</h2>

  <div class="cards">
    <% @flats.each do |flat| %>
        <div class="card">
          <h3><%= flat.name %></h3>
          <p><%= flat.address %></p>
          <p>Price: Â£<%= flat.price_per_night %></p>
          <p>Sleeps: <%= flat.number_of_guests %> persons</p>
          <button type="button" class="btn btn-outline-primary" id="more-info">
            <%= link_to 'More info', flat_path(flat) %>
          </button>
        </div>
    <% end %>
  </div>
</div>
